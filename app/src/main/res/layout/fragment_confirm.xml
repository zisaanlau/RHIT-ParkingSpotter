<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_confirm"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_confirm"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="24sp"
            android:background="@color/colorRose"
            android:textColor="#ffffff"
            android:padding="10dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:padding="10dp"
            android:text="Did you get the spot?"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="20sp"
            android:background="#C4C4C4"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="10dp"
            ></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_margin="50dp"
            android:layout_height= "100dp"
            android:background="@drawable/round_corner_red"
            android:orientation="vertical"
            android:text="Yes, I get the parking space"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/confirm_slot"
            android:padding="3dp">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_margin="50dp"
            android:layout_height= "100dp"
            android:background="@drawable/round_corner_red"
            android:orientation="vertical"
            android:text="No, it is occupied"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/deny_slot"
            android:padding="3dp">

        </Button>
    </LinearLayout>


</LinearLayout>