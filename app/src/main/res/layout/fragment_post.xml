<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_get"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <TextView

        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="24sp"
        android:background="@color/colorRose"
        android:textColor="#ffffff"
        android:padding="10dp"
        ></TextView>

    <LinearLayout
        android:layout_below="@id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"

        android:id="@+id/post_select"
        >

        <TextView
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:text="Report a free space at:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>
        <Button
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:id="@+id/selectLotButton"
            android:text="Select a Parking Lot"></Button>

    </LinearLayout>
    <TextView
        android:id="@+id/post_welcome"
        android:layout_below="@id/post_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="20sp"
        android:background="#C4C4C4"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="10dp"
        ></TextView>


    <LinearLayout
        android:layout_below="@id/post_welcome"
        android:layout_width="match_parent"
        android:layout_height= "match_parent"
        android:layout_margin="20dp"
        android:layout_above="@id/post_token"
        android:background="#C4C4C4"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/post_map"
        android:src="@drawable/map"
         >

    </ImageView>



    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/post_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:gravity="center"
        android:padding="10dp"
        android:text="My current tokens:"
        android:textColor="#000000"
        android:textSize="20sp"
        ></TextView>


</RelativeLayout>