<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/get_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRose"
            android:padding="10dp"
            android:text="@string/title"
            android:textColor="#ffffff"
            android:textSize="24sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:padding="10dp"
            android:text="Select a parking lot and get a spot!"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C4C4C4"
            android:gravity="center"
            android:padding="10dp"
            android:text="Welcome!"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <Button
            android:id="@+id/selectGetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRose"
            android:text="Select Parking Lot"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/get_button_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/get_token"
        android:layout_below="@+id/get_top"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/getbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner_red"
            android:orientation="vertical"
            android:padding="3dp"
            android:text="GET"
            android:textColor="#ffffff"
            android:textSize="50dp">

        </Button>


        <LinearLayout
            android:id="@+id/get_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:background="@drawable/round_corner_grey"
            >

            <TextView
                android:id="@+id/get_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="Row: "
                android:textColor="#000000"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/get_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="Column: "
                android:textColor="#000000"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/gotoConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner_red"
            android:padding="3dp"
            android:text="Confirm the spot or report occupied"
            android:textColor="#ffffff"
            android:textSize="15dp">
        </Button>

        <Button
            android:id="@+id/shareMess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop = "30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner_red"
            android:padding="3dp"
            android:text="Share this space via SMS"
            android:textColor="#ffffff"
            android:textSize="15dp">

        </Button>


    </LinearLayout>


    <TextView
        android:id="@+id/get_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#C4C4C4"
        android:gravity="center"
        android:padding="10dp"
        android:text="My current tokens:"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>


</RelativeLayout>